{
  "name": "ec",
  "displayName": "EC",
  "description": "Syntax highlighting for EC (sentence based code) (.en files)",
  "version": "0.1.0",
  "publisher": "Josjuar Lister",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ec",
        "aliases": ["EC", "ec", "en"],
        "extensions": [".en", ".eng"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ec",
        "scopeName": "source.ec",
        "path": "./syntaxes/english.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "entity.name.tag.each.ec",
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "support.type.ec",
            "settings": {
              "foreground": "#FF79C6",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.name.function.definition.ec",
            "settings": {
              "foreground": "#DCDCAA",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.name.function.call.ec",
            "settings": {
              "foreground": "#DCDCAA"
            }
          },
          {
            "scope": "punctuation.definition.ec",
            "settings": {
              "foreground": "#56abd3"
            }
          },
          {
            "scope": "storage.type.ec",
            "settings": {
              "foreground": "#4EC9B0"
            }
          },
          {
            "scope": "keyword.control.ec",
            "settings": {
              "foreground": "#C586C0"
            }
          },
          {
            "scope": "keyword.other.ec",
            "settings": {
              "foreground": "#C586C0"
            }
          },
          {
            "scope": "keyword.operator.ec",
            "settings": {
              "foreground": "#ebe6be"
            }
          },
          {
            "scope": "constant.language.boolean.ec",
            "settings": {
              "foreground": "#569CD6"
            }
          },
          {
            "scope": "support.function.ec",
            "settings": {
              "foreground": "#b0dcaa"
            }
          },
          {
            "scope": "variable.other.interpolation.ec",
            "settings": {
              "foreground": "#F1FA8C",
              "fontStyle": "bold"
            }
          }
        ]
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ec"
  },
  "license": "MIT"
}
