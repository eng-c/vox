{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vox",
  "scopeName": "source.vox",
  "patterns": [
    { "include": "#comments" },
    { "include": "#function-definition" },
    { "include": "#function-call" },
    { "include": "#strings" },
    { "include": "#types" },
    { "include": "#booleans" },
    { "include": "#numbers" },
    { "include": "#loop-expansion" },
    { "include": "#conditional-branch" },
    { "include": "#control-keywords" },
    { "include": "#action-keywords" },
    { "include": "#io-keywords" },
    { "include": "#operators" },
    { "include": "#properties" },
    { "include": "#articles" }
  ],
  "repository": {
    "comments": {
      "name": "comment.block.vox",
      "begin": "\\(",
      "end": "\\)",
      "patterns": [
        { "include": "#comments" }
      ]
    },
    "function-definition": {
      "match": "\\b(To)\\s+(\"[^\"]+\")",
      "captures": {
        "1": { "name": "storage.type.function.vox" },
        "2": { "name": "entity.name.function.definition.vox" }
      }
    },
    "function-call": {
      "match": "(\"[^\"]+\")\\s+(of|on)\\b",
      "captures": {
        "1": { "name": "entity.name.function.call.vox" },
        "2": { "name": "punctuation.accessor.vox" }
      }
    },
    "strings": {
      "name": "string.quoted.double.vox",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "match": "(?<!\\{)(\\{)(?!\\{)([^}]*?)(?<!\\})(\\})(?!\\})",
          "captures": {
            "1": { "name": "punctuation.section.interpolation.begin.vox" },
            "2": { "name": "variable.other.interpolation.vox" },
            "3": { "name": "punctuation.section.interpolation.end.vox" }
          }
        },
        {
          "name": "constant.character.escape.vox",
          "match": "\\\\."
        }
      ]
    },
    "loop-expansion": {
      "comment": "Parameter loop expansion: 'each X from Y' - uses entity.name.tag for distinct blue color",
      "match": "\\b(each)\\b",
      "name": "entity.name.tag.each.vox"
    },
    "conditional-branch": {
      "comment": "Conditional branching: 'but' keyword - uses support.type for distinct teal/cyan color",
      "match": "\\b(but)\\b",
      "name": "support.type.vox"
    },
    "control-keywords": {
      "name": "keyword.control.vox",
      "match": "\\b(?i:(if|then|otherwise|else|while|for|from|to|return|exit|break|continue|repeat|times))\\b"
    },
    "action-keywords": {
      "name": "keyword.other.vox",
      "match": "\\b(?i:(print|set|create|increment|decrement|is|are|was|treating|as|enable|disable|error|catching|flag|flags|parse|required|default|argument|arguments))\\b"
    },
    "io-keywords": {
      "name": "support.function.vox",
      "match": "\\b(?i:(open|close|read|write|delete|resize|reading|writing|appending))\\b"
    },
    "types": {
      "name": "storage.type.vox",
      "match": "\\b(?i:(number|text|boolean|buffer|file|float|list|newline))\\b"
    },
    "operators": {
      "name": "keyword.operator.vox",
      "match": "\\b(?i:(add|subtract|multiply|divide|modulo|plus|minus|greater|less|equal|than|and|or|not))\\b"
    },
    "properties": {
      "match": "('s)\\s*(capacity|size|absolute|sign|even|odd|positive|negative|descriptor|modified|permissions|all|count|first|last)",
      "captures": {
        "1": { "name": "punctuation.accessor.vox" },
        "2": { "name": "variable.other.property.vox" }
      }
    },
    "articles": {
      "name": "punctuation.definition.vox",
      "match": "\\b(?i:(a|an|the|called|with|of|on|at|into|for|in|bytes|size))\\b"
    },
    "booleans": {
      "name": "constant.language.boolean.vox",
      "match": "\\b(?i:(true|false))\\b"
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.vox",
          "match": "-?\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.vox",
          "match": "-?\\b\\d+\\b"
        }
      ]
    }
  }
}
